@page
@model WebApplication_BusTimeline.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class ="mb-4">
    <h2>Register</h2>
    <form method="post">
        <div class="mb-2">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" asp-for="userRegisterDTO.Name" required>
        </div>
        <div class="mb-2">
            <label for="lastname">Lastname:</label>
            <input type="text" id="lastname" name="lastname" asp-for="userRegisterDTO.Lastname" required>
        </div>
        <div class="mb-2">
            <label for="address">Address:</label>
            <input type="text" id="address" name="address" asp-for="userRegisterDTO.Address">
        </div>
        <div class="mb-2">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" asp-for="userRegisterDTO.Email" required>
        </div>
        <div class="mb-2">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" asp-for="userRegisterDTO.Username" required>
        </div>
        <div class="mb-2">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" asp-for="userRegisterDTO.Password" required>
        </div>
        <div class="mb-2">
            <label for="confirmpassword">Confirm Password:</label>
            <input type="password" id="confirmpassword" name="confirmpassword" asp-for="userRegisterDTO.ConfirmPassword" required>
        </div>
        <div class="mb-4">
            <button type="submit">Register</button>
        </div>

        @if (Model.ErrorMessage != null)
        {
            <div class="alert alert-danger" role="alert" style="margin-right: 750px;">
                <h7>@Model.ErrorMessage</h7>
            </div>
        }
    </form>
</div>

<a href="../Login/Login">Već ste naš korisnik, prijavite se!</a>