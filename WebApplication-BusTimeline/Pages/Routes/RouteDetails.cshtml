@page
@model WebApplication_BusTimeline.Pages.Routes.RouteDetailsModel
@{
}

<div class="row">
	<div class="col-md-6">
		@if (Model.Route != null)
		{
			<div class="mb-2" style="width:400px">
				<div class="row">
					<h4><span>Linija:</span> <span class="fw-bold">@Model.Route.Name</span></h4>
				</div>
			</div >
		}


	<div style="width:500px">
		@if (Model.Stops?.Count > 0)
		{
			<div class="row">
				<div class="col-9">

					<table class="table" width="200px">
						<thead class="table-primary">
						
							<th style="text-align:center">Id</th>
							<th style="text-align:center">Naziv</th>
							<th></th>
						</thead>

						@foreach (var s in Model.Stops)
						{
							<tr class="table-secondary">

									<td style="text-align:center">@s.Id</td>
									<td style="text-align:center">@s.Name</td>
									<td style="text-align:center">
										<a href=@($"https://localhost:7292/Routes/RouteDetails?routeId={Model.Route.Id}&stanicaId={s.Id}&lastRbr={Model.LastRBr}")>
											<button class="btn btn-primary" style="background-color:white; width:40px; height:40px; display: flex; align-items: center; justify-content: center;">
												@* <svg width="147px" height="147px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path fill-rule="evenodd" clip-rule="evenodd" d="M12.2929 4.29289C12.6834 3.90237 13.3166 3.90237 13.7071 4.29289L20.7071 11.2929C21.0976 11.6834 21.0976 12.3166 20.7071 12.7071L13.7071 19.7071C13.3166 20.0976 12.6834 20.0976 12.2929 19.7071C11.9024 19.3166 11.9024 18.6834 12.2929 18.2929L17.5858 13H4C3.44772 13 3 12.5523 3 12C3 11.4477 3.44772 11 4 11H17.5858L12.2929 5.70711C11.9024 5.31658 11.9024 4.68342 12.2929 4.29289Z" fill="#000000"></path> </g></svg>
			 *@								</button>
										</a>
									</td>
							</tr>
						}

					</table>

				</div>

			</div>

		}
		</div>
	</div>

	<div class="col-md-4">
		<div class="mb-3">
			<h4>Stanice na liniji:</h4>
		</div>
			
		<div class="row" >
			<div class="row-col-4">
				<div class="mb-3">
		@if (Model.RouteStops != null)
		{
			<table class="table">
				<thead class="table-primary">
					<tr>
						<th></th>
						<th style="text-align:center">Redni broj</th>
						<th style="text-align:center">Stanica</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var s in Model.RouteStops)
					{
						<tr class="table-secondary">
							<td style="text-align:center">
								<form method="post" asp-page-handler="DeleteRouteStop" asp-route-routeId="@Model?.Route?.Id" asp-route-stanicaId="@s?.Id" asp-route-Rbr="@s?.Rbr">
									<button class="btn btn-primary" style="background-color:white; width:40px; height:40px; display: flex; align-items: center; justify-content: center;">
										@* <svg width="40px" height="40px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path fill-rule="evenodd" clip-rule="evenodd" d="M11.7071 4.29289C12.0976 4.68342 12.0976 5.31658 11.7071 5.70711L6.41421 11H20C20.5523 11 21 11.4477 21 12C21 12.5523 20.5523 13 20 13H6.41421L11.7071 18.2929C12.0976 18.6834 12.0976 19.3166 11.7071 19.7071C11.3166 20.0976 10.6834 20.0976 10.2929 19.7071L3.29289 12.7071C3.10536 12.5196 3 12.2652 3 12C3 11.7348 3.10536 11.4804 3.29289 11.2929L10.2929 4.29289C10.6834 3.90237 11.3166 3.90237 11.7071 4.29289Z" fill="#000000"></path> </g></svg>
			 *@						</button>
								</form>
							</td>
							<td style="text-align:center">@s.Rbr</td>
							<td style="text-align:center">@s.Stop.Name</td>
						</tr>
					}
				</tbody>

			</table>
		}
				</div>
			</div>
		</div>




